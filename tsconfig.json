{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "incremental": true,
    "useDefineForClassFields": true,
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "paths": {
      "@/config/*": ["./config/*"],
      "@/api/*": ["./api/*"],
      "@/assets/*": ["./assets/*"],
      "@/hooks": ["./hooks/index"],
      "@/hooks/*": ["./hooks/*"],
      "@/components": ["./components/index"],
      "@/components/*": ["./components/*"],
      "@/container/*": ["./container/*"],
      "@/constants": ["./constants/index"],
      "@/constants/*": ["./constants/*"],
      // "@/pages/*": ["./pages/*"],
      "@/routes": ["./routes/index"],
      "@/stores": ["./stores/index"],
      "@/stores/*": ["./stores/*"],
      "@/styles": ["./styles/index"],
      "@/styles/*": ["./styles/*"],
      "@/public/*": ["../public/*"]
    },
    "esModuleInterop": true
  },
  "exclude": ["**/node_modules", "**/.*/"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.jsx",
    "**/*.json"
  ],
  "types": ["vitest/globals"]
}
